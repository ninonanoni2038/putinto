<nav>
	<div class="inner-nav">
		<a class="logo" href="/member/">
			Putinto
		</a>
		<div class="right">
			<a href="/member/<%= Member.find(session[:member]).id %>" class="nav-text"><%= Member.find(session[:member]).name %></a>
			<a href="/member/signout" class="nav-text">Signout</a>
		</div>
	</div>
</nav>
<div class="main-box">
	<div class="top-bar">
		<a href="/member/new" class="main-button">CREATE NEW QUESTION</a>
		<img src="/assets/images/rank.png" alt="" class="rank-image">
	</div>
	<div class="cards">
		<% @errors.each do |error| %>
			<div class="card">
			<a href="/member/question/<%= error.id %>">
				<div class="card-contents">
					<div class="error-box">
						<p class="card-text want"><%= error.want %></p>
						<p class="card-text timing"><%= error.timing %></p>
						<p class="card-text detail"><%= error.detail %></p>
						<p class="date-and-time"><%= error.created_at %></p>
					</div>
					<div class="user-box">
						<img src="<%= Member.find(error.member_id).image %>" alt="" class="member-image">
						<p class="member-name"><%= Member.find(error.member_id).name %></p>
					</div>
				</div>
			</div>
			</a>
		<% end %>
	</div>
</div>
