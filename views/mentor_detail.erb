			<%# <img src="/assets/images/counting_stars_logo2.png"> %>
		</a>
		<div class="left">
        <a href="/mentor">Topに戻る</a>
				<div class="mypage">
					<a href="/mentor/<%= Mentor.find(session[:mentor]).id %>"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> <%= Mentor.find(session[:mentor]).name %></a>
				</div>
				<a href="/mentor/signout">Signout</a>
		</div>
